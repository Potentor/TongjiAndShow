<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_collect_rl_height"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="5dp"
        android:id="@+id/item_collect_ll_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/collect_lv_tv_first"
            android:layout_width="@dimen/item_collect_tv_width"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textSize="@dimen/item_collect_tvsize"
            android:text="您的姓名："
            android:textColor="#626262"
            />

        <TextView
            android:id="@+id/collect_lv_tv_second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="王大锤"
            android:textColor="#626262"
            android:textSize="@dimen/item_collect_tvsize"
            android:layout_marginLeft="8dp"
            />
    </LinearLayout>

    <ImageView
        android:layout_below="@id/item_collect_ll_01"
        android:id="@+id/collect_lv_iv_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_collect_iv_height"
        android:padding="@dimen/item_collect_iv_padding"
        android:src="@mipmap/ic_up_arrow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    
</RelativeLayout>
