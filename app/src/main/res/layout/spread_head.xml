<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@mipmap/bg_general_spread"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spread_ll_head">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:paddingRight="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingLeft="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingBottom="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingTop="@dimen/spread_iv_circle_padding_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_circle_green"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/spread_tv_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/spread_tv_head_tvsize"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <TextView
                android:text="数据收集"
                android:textColor="#FFFFFF"
                android:gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/spread_tv_head_tvsize"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <ImageView
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_circle_yellow"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/spread_tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/spread_tv_head_tvsize"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <TextView
                android:text="场景总计"
                android:textColor="#FFF100"
                android:gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="@dimen/spread_tv_head_tvsize"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <ImageView
                    android:paddingRight="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingLeft="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingBottom="@dimen/spread_iv_circle_padding_r_l_b"
                    android:paddingTop="@dimen/spread_iv_circle_padding_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_circle_green"
                    android:layout_centerInParent="true" />

                <TextView
                    android:id="@+id/spread_tv_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/spread_tv_head_tvsize"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <TextView
                android:textSize="@dimen/spread_tv_head_tvsize"
                android:text="场景展示"
                android:textColor="#FFFFFF"
                android:gravity="top|center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/spread_ll_padding_left"
        android:background="#ECECEC"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spread_ll_height">

        <TextView
            android:textSize="@dimen/spread_tv_head_tvsize"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:text="  我的场景"
            android:textColor="#626262" />


        <TextView
            android:textColor="#626262"
            android:textSize="@dimen/spread_tv_head_tvsize"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:text="展示次数" />

    </LinearLayout>



</LinearLayout>