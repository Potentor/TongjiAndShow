<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/item_statistics_ll_padding_left"
    android:layout_marginTop="@dimen/item_statistics_ll_padding_top"
    android:background="#00FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_spread_ll_height">

    <TextView
        android:id="@+id/statistics_lv_tv_scenes"
        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:text="这是我的第一个场景" />

    <TextView
        android:id="@+id/statistics_lv_data"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:textColor="#009C87"
         />

</LinearLayout>
