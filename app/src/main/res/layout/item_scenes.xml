<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:background="@color/bg_background"
    android:layout_height="@dimen/item_scenes_ll_height">

    <com.loopj.android.image.SmartImageView
        android:id="@+id/scenes_lv_iv_1"
        android:layout_gravity="center_vertical"
        android:layout_width="@dimen/item_scenes_sv_w_h"
        android:layout_height="@dimen/item_scenes_sv_w_h"

        android:scaleType="fitCenter" />

    <LinearLayout
        android:paddingLeft="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/item_scenes_tv_color_black"
                android:id="@+id/scenes_lv_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="这是我的第一个微场景"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textSize="@dimen/item_scenes_tvsize_title"
                />
            <ImageView
                android:id="@+id/scenes_lv_iv_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="fitEnd"
                android:src="@mipmap/ic_share" />
        </RelativeLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/scenes_ll_show"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_scense_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/item_scenes_tv_color_black"
                android:layout_marginLeft="@dimen/item_scenes_tvleft_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_scenes_tvsize"
                android:text="场景展示"/>
            <TextView
                android:id="@+id/scenes_lv_tv_show"
                android:layout_marginLeft="@dimen/item_scenes_tvright_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_scenes_tv_color_green"
                android:textSize="@dimen/item_scenes_tvsize"
                />

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/scenes_ll_collect"
            android:background="@drawable/bg_scense_textview"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <TextView
                android:textColor="@color/item_scenes_tv_color_black"
                android:textSize="@dimen/item_scenes_tvsize"
                android:layout_marginLeft="@dimen/item_scenes_tvleft_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据收集" />

            <TextView
                android:id="@+id/scenes_lv_tv_collection"
                android:layout_marginLeft="@dimen/item_scenes_tvright_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/item_scenes_tv_color_green"
                android:textSize="@dimen/item_scenes_tvsize"
                />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
